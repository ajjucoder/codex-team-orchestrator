{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "message.schema.json",
  "type": "object",
  "required": ["message_id", "team_id", "from_agent_id", "delivery_mode", "payload", "idempotency_key", "created_at"],
  "properties": {
    "message_id": { "type": "string", "pattern": "^msg_[A-Za-z0-9_-]+$" },
    "team_id": { "type": "string", "pattern": "^team_[A-Za-z0-9_-]+$" },
    "from_agent_id": { "type": "string", "pattern": "^agent_[A-Za-z0-9_-]+$" },
    "to_agent_id": { "type": "string", "pattern": "^agent_[A-Za-z0-9_-]+$" },
    "delivery_mode": { "type": "string", "enum": ["direct", "broadcast"] },
    "idempotency_key": { "type": "string" },
    "payload": {
      "type": "object",
      "required": ["summary", "artifact_refs"],
      "properties": {
        "summary": { "type": "string" },
        "artifact_refs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["artifact_id", "version"],
            "properties": {
              "artifact_id": { "type": "string", "pattern": "^artifact_[A-Za-z0-9_-]+$" },
              "version": { "type": "integer", "minimum": 1 }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "created_at": { "type": "string" },
    "trace": {
      "type": "object",
      "required": ["team_id", "message_id"],
      "properties": {
        "team_id": { "type": "string" },
        "agent_id": { "type": "string" },
        "task_id": { "type": "string" },
        "message_id": { "type": "string" },
        "artifact_id": { "type": "string" }
      }
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": { "properties": { "delivery_mode": { "const": "direct" } } },
      "then": { "required": ["to_agent_id"] }
    }
  ]
}
