{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "team.schema.json",
  "type": "object",
  "required": ["team_id", "status", "profile", "max_threads", "created_at", "updated_at"],
  "properties": {
    "team_id": { "type": "string", "pattern": "^team_[A-Za-z0-9_-]+$" },
    "status": { "type": "string", "enum": ["active", "finalized", "failed"] },
    "profile": { "type": "string" },
    "objective": { "type": "string" },
    "max_threads": { "type": "integer", "minimum": 1, "maximum": 6 },
    "created_at": { "type": "string" },
    "updated_at": { "type": "string" },
    "trace": {
      "type": "object",
      "required": ["team_id"],
      "properties": {
        "team_id": { "type": "string" },
        "agent_id": { "type": "string" },
        "task_id": { "type": "string" },
        "message_id": { "type": "string" },
        "artifact_id": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
