{
  "type": "object",
  "required": ["team_id", "proposal_id", "strategy", "votes"],
  "properties": {
    "team_id": { "type": "string", "pattern": "^team_[A-Za-z0-9_-]+$" },
    "proposal_id": { "type": "string" },
    "strategy": { "type": "string", "enum": ["consensus", "lead", "strict_vote"] },
    "lead_agent_id": { "type": "string", "pattern": "^agent_[A-Za-z0-9_-]+$" },
    "votes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["agent_id", "decision"],
        "properties": {
          "agent_id": { "type": "string", "pattern": "^agent_[A-Za-z0-9_-]+$" },
          "decision": { "type": "string", "enum": ["approve", "reject"] },
          "reason": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
