{
  "type": "object",
  "required": ["team_id", "task_size", "estimated_parallel_tasks", "budget_tokens_remaining"],
  "properties": {
    "team_id": { "type": "string", "pattern": "^team_[A-Za-z0-9_-]+$" },
    "task_size": { "type": "string", "enum": ["small", "medium", "high"] },
    "estimated_parallel_tasks": { "type": "integer", "minimum": 1 },
    "budget_tokens_remaining": { "type": "integer", "minimum": 0 },
    "token_cost_per_agent": { "type": "integer", "minimum": 1 },
    "planned_roles": {
      "type": "array",
      "items": { "type": "string" },
      "maxItems": 6
    }
  },
  "additionalProperties": false
}
